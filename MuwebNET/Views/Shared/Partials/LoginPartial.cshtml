@using MUwebNET.Web.Framework
@if (!SessionManager.Current.Logged)
{
    <form class="navbar-form navbar-right" role="log">
        <div class="form-group">
            <input type="text" class="form-control" name="cpuser" placeholder="Usuário">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="cppass" placeholder="Senha">
        </div>
        <button type="submit" class="btn btn-default">Entrar</button>
    </form>
}
else
{
    <p>Bem-vindo(a), @SessionManager.Current.Name</p>
    <ul>
        <li><a href="@Url.Action("MinhaConta","Cliente")">Painel</a></li>
        <li><a class="btn btn-danger" href="@Url.Action("Sair","Cliente")">Sair</a></li>
    </ul>
}